                <div class="dropdown-content">
                    <a href="#" onClick="SelectCmp('Noise', 1 )" return false;> Noise </a>
                    <input type="hidden" id="d1" value="0" readonly="readonly"/>
                    <a href="#" onClick="SelectCmp('Noise', 2 )" return false;> Street Cleaning </a>
